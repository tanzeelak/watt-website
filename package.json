  "bugs": {
    "url": "https://github.com/tanzeelak/watt-website/issues"
  },
  "homepage": "https://github.com/tanzeelak/watt-website#readme",
  "dependencies": {
    "express": "^4.15.3",
    "jade": "^1.11.0",
    "morgan": "^1.8.2",
    "nodemon": "^1.9.2",
    "stylus": "^0.54.5"
  }
}
